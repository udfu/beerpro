<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="8dp"
              android:paddingBottom="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/addPlace"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_place_black_24dp"
                android:drawableTint="@android:color/darker_gray"
                android:text="Ort Hinzufügen"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"/>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffeeeeee"/>

        <Button
                android:id="@+id/addPrice"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_attach_money_black_24dp"
                android:drawableTint="@android:color/darker_gray"
                android:text="Meinen Preis Hinzufügen"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffeeeeee"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/addToFridge"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_refrigerator"
                android:drawableTint="@android:color/darker_gray"
                android:text="In den Kühlschrank"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"/>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffeeeeee"/>

        <Button
                android:id="@+id/addPrivateNote"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_create_black_24dp"
                android:drawableTint="@android:color/darker_gray"
                android:text="Private Notiz hinzufügen"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffeeeeee"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/addRating"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_star_black_24dp"
                android:drawableTint="@android:color/darker_gray"
                android:text="Bewertung hinzufügen"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"/>

    </LinearLayout>

</LinearLayout>
